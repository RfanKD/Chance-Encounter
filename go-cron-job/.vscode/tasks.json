{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "go",
            "args": [ "build", "-o", "bin/cronTask"],
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "amd64"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Zip",
            "command": "zip",
            "args": [ "crontTask.zip", "cronTask", "appSettings.json"],
            "dependsOn":[ "Build" ]
        },
    ]
}